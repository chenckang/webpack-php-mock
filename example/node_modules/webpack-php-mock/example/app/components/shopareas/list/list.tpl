<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            {if $mode eq 'overlap'}
                <th>品牌名称</th>
                <th>总配送范围</th>
            {else}
                <th>商户名称</th>
                <th>配送范围</th>
            {/if}
        </tr>
    </thead>
    <tbody>
        {if $mode eq 'overlap'}
            {foreach $data as $item}
            <tr>
                <td>
                    <button type="button" 
                        class="btn btn-xs btn-info glyphicon glyphicon-glyphicon glyphicon-map-marker"
                        data-node="map"
                        data-mode="{$mode}"
                        data-brand="{$item.brand}"
                        data-aoiid="{$aoiid}"
                    ></button>
                    {$item.brand}
                </td>
                <td title="单位：平方公里">
                    {$item.delivery_area}
                </td>
            </tr>
            {/foreach}
        {else}
            {foreach $data as $item}
            <tr>
                <td>
                    <button type="button" 
                        class="btn btn-xs btn-info glyphicon glyphicon-glyphicon glyphicon-map-marker"
                        data-node="map"
                        data-mode="{$mode}"
                        data-shopid="{$item.shop_id}"
                        data-aoiid="{$aoiid}"
                    ></button>
                    {$item.shop_name}
                </td>
                <td title="单位：平方公里">
                    {$item.deliver_area}
                </td>
            </tr>
            {/foreach}
        {/if}
    </tbody>
</table>