<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>商圈名称</th>
            <th>取餐时间&gt;10</th>
            {if $detail}
                <th>8&lt;取餐时间&lt;10</th>
                <th>5&lt;取餐时间&lt;8</th>
                <th>取餐时间&lt;5</th>
            {/if}
        </tr>
    </thead>
    <tbody>
        {foreach $data as $key => $item}
        <tr>
            <td>
                <button type="button" 
                    class="btn btn-xs btn-info
                    glyphicon glyphicon-glyphicon glyphicon-map-marker"
                    data-node="map"
                    data-aoiid="{$item.aoiid}"
                ></button>
                {$item.aoiname}
            </td>
            <td>{$item.gt10}</td>
            {if $detail}
                <td>{$item.gt8Andlt10}</td>
                <td>{$item.gt5Andlt8}</td>
                <td>{$item.lt5}</td>
            {/if}
        </tr>
        {/foreach}
    </tbody>
</table>