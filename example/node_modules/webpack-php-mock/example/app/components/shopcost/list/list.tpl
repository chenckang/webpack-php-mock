<table class="table table-striped table-hover table-condensed table-list">
    <thead>
        <tr>
            <th>商户名称</th>
            {if $detail}
                <th>每单收入</th>
                <th>每单时间</th>
                <th>每单骑士</th>
                <th>每单距离</th>
            {/if}
            <th>综合打分</th>
        </tr>
    </thead>
    <tbody>
        {foreach $data as $item}
        <tr>
            <td>
                <button type="button" class="btn btn-xs btn-info" data-toggle="popover" data-shopid={$item.shopid}
                    data-toggle="popover"
                    data-trigger="focus"
                    data-html="true"
                    data-placement="right"
                    data-viewport='.table-list'
                    data-content='
                    <div class="popover-content">
                        {foreach $item.transDesc as $desc}
                        {if $desc.title}
                        <div>
                            <span class="label label-xs label-warning">{$desc.title}</span>
                            <ul class="desc-list list-group">
                                {foreach $desc.value as $d}
                                {if $d}
                                    <li class="list-group-item list-group-item-xs">
                                        <span class="glyphicon glyphicon-glyphicon glyphicon-hand-right"></span>
                                        <span>{$d}</span>
                                    </li>
                                {/if}
                                {/foreach}
                            </ul>
                        </div>
                        {/if}
                        {/foreach}
                    </div>'
                >详</button>
                <button type="button" 
                    class="btn btn-xs 
                    {if $shopId eq $item.shopid}
                        btn-danger
                    {else}
                        btn-info
                    {/if}
                    glyphicon glyphicon-glyphicon glyphicon-map-marker"
                    data-node="map"
                    data-shopid={$shopId}
                    data-param={$item.shopid}
                ></button>
                {$item.name}
            </td>
            {if $detail}
                <td>&yen; {$item.avg_income_per_order}</td>
                <td>{$item.avg_costtime_per_order} 分钟</td>
                <td>{$item.avg_costknight_per_order} 个</td>
                <td>{$item.avg_distance_per_order} 米</td>
            {/if}
            <td>
                <button type="button" class="btn btn-xs btn-info"
                    data-toggle="popover"
                    data-trigger="focus"
                    data-html="true"
                    data-placement="left"
                    data-viewport='.table-list'
                    data-content='<div><span class="label label-xs label-warning">详细描述</span><div class="well">价值 = 收入 / 商户消耗成本</div></div>'
                >分</button>
                {$item.score}
            </td>
        </tr>
        {/foreach}
    </tbody>
</table>